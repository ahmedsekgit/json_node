function copyToClipboard(element) 
{
    var $temp = $("<textarea>");
    $("body").append($temp);
    $temp.val($(element).text().trim()).select();
    document.execCommand("copy");
    $temp.remove();
}

function format() 
{
        
     return prettier.format
     ($('#show_div').val(), 
     {
        plugins: prettierPlugins,
        parser: "php"
      });
  }

hljs.initHighlightingOnLoad();
</script>

